.settItemField{
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
}

.stAddressField{
  margin: 10rpx 0 30rpx 0;
  background-color: lightgreen;
}

.addressDes{
  padding-left: 20rpx;
  font-size: 30rpx;
}

.settleItemField{
  display: flex;
  flex-direction: column;
  background-color: white;
}

.stCostField{
  margin: 30rpx 20rpx;
}

.stFreightTxt{
  font-size: 30rpx;
  font-weight: bold;
}

.stAllCostTxt{
  font-size: 30rpx;
