}

.stBottomField {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
  border-top-width: 1rpx;
  border-left-width: 0;
  border-right-width: 0;
  border-bottom-width: 0;
  border-style: solid;
  border-color: #f2f2f2;
  background-color: white;
}

